<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.FlowPane?>

<FlowPane fx:id="fpLayout" alignment="CENTER" orientation="VERTICAL" prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.databases.client.controllers.LoginController">
   <children>
      <Label prefWidth="300.0" text="Введите логин:">
         <FlowPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </FlowPane.margin></Label>
      <TextField fx:id="tfLogin" prefWidth="300.0" promptText="Логин">
         <FlowPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </FlowPane.margin></TextField>
      <Label prefWidth="300.0" text="Введите пароль:">
         <FlowPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </FlowPane.margin></Label>
      <PasswordField fx:id="pfPassword" prefWidth="300.0" promptText="Пароль">
         <FlowPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </FlowPane.margin></PasswordField>
      <Button alignment="CENTER" mnemonicParsing="false" onAction="#enter" prefWidth="300.0" text="Войти">
         <FlowPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </FlowPane.margin></Button>
   </children>
</FlowPane>
